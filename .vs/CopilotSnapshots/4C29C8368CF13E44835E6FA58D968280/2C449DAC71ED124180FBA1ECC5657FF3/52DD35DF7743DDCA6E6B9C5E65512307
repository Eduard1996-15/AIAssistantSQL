@model QueryViewModel
@{
    ViewData["Title"] = "Consultas en Lenguaje Natural";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="mb-3">
            <i class="bi bi-chat-left-text"></i> Consultas en Lenguaje Natural
        </h1>
        <p class="lead">Escribe tu pregunta en lenguaje natural y la IA generará la consulta SQL por ti.</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Nueva Consulta</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="naturalLanguageQuery" class="form-label">Escribe tu pregunta:</label>
                    <textarea class="form-control" id="naturalLanguageQuery" rows="3" placeholder="Ejemplo: Muéstrame los últimos 10 usuarios registrados"></textarea>
                    <div class="form-text">
                        Escribe tu consulta en lenguaje natural. La IA la convertirá en SQL y la ejecutará.
                    </div>
                </div>
                <button type="button" class="btn btn-primary btn-lg" id="executeQueryBtn">
                    <i class="bi bi-play-circle"></i> Ejecutar Consulta
                </button>
                <button type="button" class="btn btn-secondary btn-lg" id="clearBtn">
                    <i class="bi bi-x-circle"></i> Limpiar
                </button>
                
                <div id="loadingSpinner" class="d-none mt-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Procesando...</span>
                    </div>
                    <span class="ms-2">Generando consulta SQL con IA...</span>
                </div>
            </div>
        </div>

        <!-- Área de Resultados -->
        <div id="resultsArea" class="d-none">
            <div class="card mb-4">
                <div class="card-header" id="resultsHeader">
                    <h5 class="mb-0"><i class="bi bi-code-square"></i> SQL Generado</h5>
                </div>
                <div class="card-body">
                    <div class="code-block" id="generatedSql"></div>
                    <div id="executionInfo" class="mt-2"></div>
                </div>
            </div>

            <div class="card" id="dataResultsCard">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-table"></i> Resultados</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="resultsTable">
                            <thead class="table-dark" id="resultsTableHead"></thead>
                            <tbody id="resultsTableBody"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Área de Error -->
        <div id="errorArea" class="d-none">
            <div class="alert alert-danger" role="alert">
                <h5 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Error</h5>
                <p id="errorMessage"></p>
                <hr>
                <p class="mb-0">
                    <strong>SQL Generado:</strong><br>
                    <code id="errorSql"></code>
                </p>
            </div>
        </div>
    </div>
</div>

@if (Model.History.Any())
{
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Historial Reciente</h5>
                    <form asp-controller="Query" asp-action="ClearHistory" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-trash"></i> Limpiar Historial
                        </button>
                    </form>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var item in Model.History)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@item.NaturalLanguageQuery</h6>
                                    <small class="text-muted">@item.Timestamp.ToString("HH:mm:ss")</small>
                                </div>
                                <p class="mb-1"><small><code>@item.GeneratedSQL</code></small></p>
                                @if (item.Success)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Exitosa</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Fallida</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#executeQueryBtn').click(function() {
                var query = $('#naturalLanguageQuery').val().trim();
                
                if (!query) {
                    alert('Por favor ingresa una consulta');
                    return;
                }

                // Mostrar spinner
                $('#loadingSpinner').removeClass('d-none');
                $('#resultsArea').addClass('d-none');
                $('#errorArea').addClass('d-none');
                $(this).prop('disabled', true);

                // Ejecutar consulta
                $.ajax({
                    url: '@Url.Action("Execute", "Query")',
                    type: 'POST',
                    data: { naturalLanguageQuery: query },
                    success: function(response) {
                        $('#loadingSpinner').addClass('d-none');
                        $('#executeQueryBtn').prop('disabled', false);

                        if (response.success) {
                            // Mostrar SQL generado
                            $('#generatedSql').text(response.generatedSQL);
                            
                            // Mostrar información de ejecución
                            $('#executionInfo').html(
                                '<small class="text-muted">' +
                                '<i class="bi bi-check-circle text-success"></i> ' +
                                'Consulta ejecutada exitosamente. ' +
                                '<strong>' + response.rowCount + '</strong> filas retornadas en ' +
                                '<strong>' + response.executionTime + '</strong>' +
                                '</small>'
                            );

                            // Mostrar resultados en tabla
                            if (response.results && response.results.length > 0) {
                                var columns = Object.keys(response.results[0]);
                                
                                // Generar encabezados
                                var headerHtml = '<tr>';
                                columns.forEach(function(col) {
                                    headerHtml += '<th>' + col + '</th>';
                                });
                                headerHtml += '</tr>';
                                $('#resultsTableHead').html(headerHtml);

                                // Generar filas
                                var bodyHtml = '';
                                response.results.forEach(function(row) {
                                    bodyHtml += '<tr>';
                                    columns.forEach(function(col) {
                                        var value = row[col];
                                        if (value === null) {
                                            bodyHtml += '<td class="text-muted"><em>NULL</em></td>';
                                        } else {
                                            bodyHtml += '<td>' + value + '</td>';
                                        }
                                    });
                                    bodyHtml += '</tr>';
                                });
                                $('#resultsTableBody').html(bodyHtml);

                                $('#dataResultsCard').removeClass('d-none');
                            } else {
                                $('#dataResultsCard').addClass('d-none');
                            }

                            $('#resultsArea').removeClass('d-none');
                            $('#resultsHeader').removeClass('bg-danger').addClass('bg-primary');
                        } else {
                            // Mostrar error
                            $('#errorMessage').text(response.errorMessage);
                            $('#errorSql').text(response.generatedSQL || 'N/A');
                            $('#errorArea').removeClass('d-none');
                        }

                        // Recargar página después de 2 segundos para actualizar historial
                        setTimeout(function() {
                            location.reload();
                        }, 2000);
                    },
                    error: function(xhr, status, error) {
                        $('#loadingSpinner').addClass('d-none');
                        $('#executeQueryBtn').prop('disabled', false);
                        
                        $('#errorMessage').text('Error de comunicación: ' + error);
                        $('#errorSql').text('N/A');
                        $('#errorArea').removeClass('d-none');
                    }
                });
            });

            $('#clearBtn').click(function() {
                $('#naturalLanguageQuery').val('');
                $('#resultsArea').addClass('d-none');
                $('#errorArea').addClass('d-none');
            });

            // Permitir ejecutar con Enter (Ctrl+Enter para saltos de línea)
            $('#naturalLanguageQuery').keydown(function(e) {
                if (e.key === 'Enter' && !e.ctrlKey) {
                    e.preventDefault();
                    $('#executeQueryBtn').click();
                }
            });
        });
    </script>
}
