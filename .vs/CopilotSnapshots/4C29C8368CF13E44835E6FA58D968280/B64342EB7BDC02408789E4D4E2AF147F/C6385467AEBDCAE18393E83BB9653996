<!-- Modal para mostrar resultado de verificación -->
<div class="modal fade" id="ollamaCheckModal" tabindex="-1" aria-labelledby="ollamaCheckModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" id="modalHeader">
                <h5 class="modal-title" id="ollamaCheckModalLabel">
                    <i class="bi bi-wifi"></i> Verificación de Conexión Ollama
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Verificando...</span>
                    </div>
                    <p class="mt-3">Verificando conexión con Ollama...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#checkOllamaBtn').click(function() {
                // Mostrar modal con spinner
                $('#ollamaCheckModal').modal('show');
                $('#modalHeader').removeClass('bg-success bg-danger bg-warning').addClass('bg-primary text-white');
                $('#modalBody').html(`
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Verificando...</span>
                        </div>
                        <p class="mt-3">Verificando conexión con Ollama...</p>
                    </div>
                `);

                // Hacer la petición AJAX
                $.ajax({
                    url: '@Url.Action("CheckOllamaConnection", "Home")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            // Conexión exitosa
                            $('#modalHeader').removeClass('bg-primary bg-danger bg-warning').addClass('bg-success text-white');
                            $('#modalBody').html(`
                                <div class="alert alert-success mb-0">
                                    <h5><i class="bi bi-check-circle-fill"></i> ${response.message}</h5>
                                    <p class="mb-0">${response.details}</p>
                                </div>
                                <div class="mt-3">
                                    <strong>Estado:</strong> <span class="badge bg-success">Online</span>
                                </div>
                            `);
                        } else {
                            // Conexión fallida
                            $('#modalHeader').removeClass('bg-primary bg-success bg-warning').addClass('bg-danger text-white');
                            
                            let suggestionsHtml = '';
                            if (response.suggestions && response.suggestions.length > 0) {
                                suggestionsHtml = '<hr><strong>Soluciones:</strong><ul class="mb-0">';
                                response.suggestions.forEach(function(suggestion) {
                                    suggestionsHtml += '<li>' + suggestion + '</li>';
                                });
                                suggestionsHtml += '</ul>';
                            }

                            $('#modalBody').html(`
                                <div class="alert alert-danger mb-0">
                                    <h5><i class="bi bi-exclamation-triangle-fill"></i> ${response.message}</h5>
                                    <p>${response.details}</p>
                                    ${suggestionsHtml}
                                </div>
                                <div class="mt-3">
                                    <strong>Estado:</strong> <span class="badge bg-danger">Offline</span>
                                </div>
                            `);
                        }

                        // Actualizar indicador en la página
                        setTimeout(function() {
                            location.reload();
                        }, 3000);
                    },
                    error: function(xhr, status, error) {
                        $('#modalHeader').removeClass('bg-primary bg-success bg-danger').addClass('bg-warning text-dark');
                        $('#modalBody').html(`
                            <div class="alert alert-warning mb-0">
                                <h5><i class="bi bi-exclamation-triangle"></i> Error de Comunicación</h5>
                                <p>No se pudo verificar el estado de Ollama.</p>
                                <p class="mb-0"><strong>Error:</strong> ${error}</p>
                            </div>
                        `);
                    }
                });
            });
        });
    </script>
}
