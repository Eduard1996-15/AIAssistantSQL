@model AIAssistantSQL.Models.DatabaseSchema
@{
    ViewData["Title"] = "Diagnóstico de Esquema";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="mb-3">
            <i class="bi bi-bug"></i> Diagnóstico de Esquema de Base de Datos
        </h1>
        <div class="alert alert-info">
            <strong>Base de Datos:</strong> @Model.DatabaseName | 
            <strong>Tipo:</strong> @Model.DatabaseType | 
            <strong>Cargado:</strong> @Model.LoadedAt?.ToString("dd/MM/yyyy HH:mm:ss")
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-table"></i> Tablas Cargadas (@Model.Tables.Count)
                </h5>
            </div>
            <div class="card-body">
                <div class="accordion" id="tablesAccordion">
                    @foreach (var table in Model.Tables.OrderBy(t => t.TableName))
                    {
                        var tableId = $"table_{table.TableName.Replace(" ", "_")}";
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button @(table.TableName == "Usuario" ? "" : "collapsed")" 
                                        type="button" 
                                        data-bs-toggle="collapse" 
                                        data-bs-target="#@tableId">
                                    <strong>@table.TableName</strong>
                                    <span class="badge bg-secondary ms-2">@table.Columns.Count columnas</span>
                                    @if (table.PrimaryKeys.Any())
                                    {
                                        <span class="badge bg-success ms-2">
                                            <i class="bi bi-key"></i> PK: @string.Join(", ", table.PrimaryKeys)
                                        </span>
                                    }
                                    @if (table.ForeignKeys.Any())
                                    {
                                        <span class="badge bg-info ms-2">
                                            <i class="bi bi-link-45deg"></i> @table.ForeignKeys.Count FKs
                                        </span>
                                    }
                                </button>
                            </h2>
                            <div id="@tableId" 
                                 class="accordion-collapse collapse @(table.TableName == "Usuario" ? "show" : "")" 
                                 data-bs-parent="#tablesAccordion">
                                <div class="accordion-body">
                                    <h6>Columnas:</h6>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-striped">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>Columna</th>
                                                    <th>Tipo</th>
                                                    <th>Tamaño</th>
                                                    <th>Nullable</th>
                                                    <th>Identity</th>
                                                    <th>Es PK</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var column in table.Columns)
                                                {
                                                    var isPK = table.PrimaryKeys.Contains(column.ColumnName);
                                                    
                                                    <tr class="@(isPK ? "table-success" : "")">
                                                        <td>
                                                            <strong>@column.ColumnName</strong>
                                                            @if (isPK)
                                                            {
                                                                <i class="bi bi-key text-warning"></i>
                                                            }
                                                        </td>
                                                        <td><code>@column.DataType</code></td>
                                                        <td>@(column.MaxLength.HasValue ? column.MaxLength.Value.ToString() : "-")</td>
                                                        <td>
                                                            @if (column.IsNullable)
                                                            {
                                                                <span class="badge bg-warning">NULL</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-success">NOT NULL</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (column.IsIdentity)
                                                            {
                                                                <span class="badge bg-info">IDENTITY</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (isPK)
                                                            {
                                                                <i class="bi bi-check-circle-fill text-success"></i>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                    @if (table.ForeignKeys.Any())
                                    {
                                        <h6 class="mt-3">Claves Foráneas:</h6>
                                        <ul class="list-group">
                                            @foreach (var fk in table.ForeignKeys)
                                            {
                                                <li class="list-group-item">
                                                    <i class="bi bi-arrow-right-circle"></i> 
                                                    <strong>@fk.ColumnName</strong> → 
                                                    <code>@fk.ReferencedTable.@fk.ReferencedColumn</code>
                                                </li>
                                            }
                                        </ul>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-warning">
                <h5 class="mb-0">
                    <i class="bi bi-lightbulb"></i> Información para la IA
                </h5>
            </div>
            <div class="card-body">
                <h6>Columnas que la IA debe usar para la tabla Usuario:</h6>
                @{
                    var usuarioTable = Model.Tables.FirstOrDefault(t => t.TableName == "Usuario");
                    if (usuarioTable != null)
                    {
                        <div class="alert alert-success">
                            <h6>✅ Columnas disponibles en Usuario:</h6>
                            <ul>
                                @foreach (var col in usuarioTable.Columns)
                                {
                                    <li><code>@col.ColumnName</code> (@col.DataType)</li>
                                }
                            </ul>
                        </div>

                        <div class="alert alert-danger">
                            <h6>❌ Columnas que NO existen (comunes errores):</h6>
                            <ul>
                                @if (!usuarioTable.Columns.Any(c => c.ColumnName.Equals("nombre", StringComparison.OrdinalIgnoreCase)))
                                {
                                    <li><code>nombre</code> - Esta columna NO existe. Usa <strong>@usuarioTable.Columns.FirstOrDefault(c => c.ColumnName.Contains("Name", StringComparison.OrdinalIgnoreCase))?.ColumnName</strong> en su lugar</li>
                                }
                                @if (!usuarioTable.Columns.Any(c => c.ColumnName.Equals("email", StringComparison.OrdinalIgnoreCase)))
                                {
                                    <li><code>email</code> - Verificar si existe una columna similar</li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <strong>❌ Tabla Usuario no encontrada en el esquema!</strong>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-download"></i> Exportar Esquema
                </h5>
            </div>
            <div class="card-body">
                <p>Descarga el esquema actual en formato JSON para análisis o respaldo:</p>
                <a href="@Url.Action("GetSchemaJson", "Diagnostic")" 
                   class="btn btn-info" 
                   download="schema.json"
                   target="_blank">
                    <i class="bi bi-file-earmark-code"></i> Descargar JSON
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Buscar columnas
        $(document).ready(function() {
            $('#searchColumn').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('table tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
