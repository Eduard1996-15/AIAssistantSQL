@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section Responsive -->
<div class="text-center mb-4 mb-md-5">
    <h1 class="display-4 fw-bold">
        <i class="bi bi-robot text-primary"></i> 
        <span class="d-block d-sm-inline">AI Assistant SQL</span>
    </h1>
    <p class="lead text-muted">Consulta tus bases de datos usando lenguaje natural</p>
    
    <!-- Quick Status Bar for Mobile -->
    <div class="d-md-none">
        <div class="row g-2 mb-3">
            <div class="col-6">
                <div class="card border-0 bg-light">
                    <div class="card-body py-2 px-3">
                        <small class="d-flex align-items-center justify-content-center">
                            <span class="status-indicator @(ViewBag.IsOllamaAvailable == true ? "status-online" : "status-offline")"></span>
                            <strong>IA:</strong>&nbsp;
                            @if (ViewBag.IsOllamaAvailable)
                            {
                                <span class="text-success">ON</span>
                            }
                            else
                            {
                                <span class="text-danger">OFF</span>
                            }
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card border-0 bg-light">
                    <div class="card-body py-2 px-3">
                        <small class="d-flex align-items-center justify-content-center">
                            <span class="status-indicator @(ViewBag.IsSchemaLoaded == true ? "status-online" : "status-offline")"></span>
                            <strong>BD:</strong>&nbsp;
                            @if (ViewBag.IsSchemaLoaded)
                            {
                                <span class="text-success">OK</span>
                            }
                            else
                            {
                                <span class="text-warning">NO</span>
                            }
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Cards Grid - Responsive -->
<div class="row g-3 g-md-4 mb-4 mb-md-5">
    <!-- Sistema Status Card -->
    <div class="col-12 col-lg-4">
        <div class="card h-100 card-hover border-0 shadow-sm">
            <div class="card-body text-center p-3 p-md-4">
                <div class="mb-3">
                    <i class="bi bi-database-fill-gear text-primary" style="font-size: 2.5rem;"></i>
                </div>
                <h5 class="card-title h6 h-md-5">Estado del Sistema</h5>
                
                <!-- Status Details - Hidden on Mobile -->
                <div class="d-none d-md-block">
                    <hr />
                    <div class="text-start">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong class="small">Ollama:</strong>
                            @if (ViewBag.IsOllamaAvailable)
                            {
                                <span class="badge bg-success rounded-pill">
                                    <i class="bi bi-check-circle"></i> Conectado
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger rounded-pill">
                                    <i class="bi bi-x-circle"></i> Desconectado
                                </span>
                            }
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong class="small">Esquema:</strong>
                            @if (ViewBag.IsSchemaLoaded)
                            {
                                <span class="badge bg-success rounded-pill">
                                    <i class="bi bi-check-circle"></i> Cargado
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning rounded-pill">
                                    <i class="bi bi-exclamation-triangle"></i> No cargado
                                </span>
                            }
                        </div>
                        @if (ViewBag.IsSchemaLoaded)
                        {
                            <p class="small text-muted mb-0 mt-2">@ViewBag.SchemaInfo</p>
                        }
                    </div>
                    <hr />
                </div>
                
                <!-- Action Button -->
                <button type="button" class="btn btn-outline-primary btn-sm w-100" id="checkOllamaBtn">
                    <i class="bi bi-wifi"></i> 
                    <span class="d-none d-sm-inline">Verificar Conexión</span>
                    <span class="d-sm-none">Verificar</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Configuración Card -->
    <div class="col-12 col-sm-6 col-lg-4">
        <div class="card h-100 card-hover border-0 shadow-sm">
            <div class="card-body text-center p-3 p-md-4">
                <div class="mb-3">
                    <i class="bi bi-gear-fill text-info" style="font-size: 2.5rem;"></i>
                </div>
                <h5 class="card-title h6 h-md-5">Configuración</h5>
                <p class="card-text small text-muted d-none d-md-block">
                    Carga el esquema de tu base de datos
                </p>
                <a asp-controller="Database" asp-action="Index" class="btn btn-info w-100">
                    <i class="bi bi-database"></i> 
                    <span class="d-none d-sm-inline">Configurar BD</span>
                    <span class="d-sm-none">Config BD</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Consultas Card -->
    <div class="col-12 col-sm-6 col-lg-4">
        <div class="card h-100 card-hover border-0 shadow-sm">
            <div class="card-body text-center p-3 p-md-4">
                <div class="mb-3">
                    <i class="bi bi-chat-left-text-fill text-success" style="font-size: 2.5rem;"></i>
                </div>
                <h5 class="card-title h6 h-md-5">Consultas</h5>
                <p class="card-text small text-muted d-none d-md-block">
                    Haz preguntas en lenguaje natural
                </p>
                <a asp-controller="Query" asp-action="Index" class="btn btn-success w-100">
                    <i class="bi bi-chat-dots"></i> 
                    <span class="d-none d-sm-inline">Realizar Consulta</span>
                    <span class="d-sm-none">Consultar</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions for Mobile -->
<div class="d-md-none">
    <div class="row g-2 mb-4">
        <div class="col-6">
            <a asp-controller="Settings" asp-action="Index" class="btn btn-outline-secondary w-100 btn-sm">
                <i class="bi bi-gear"></i> Ajustes
            </a>
        </div>
        <div class="col-6">
            <a asp-controller="Query" asp-action="History" class="btn btn-outline-info w-100 btn-sm">
                <i class="bi bi-clock-history"></i> Historial
            </a>
        </div>
    </div>
</div>

<!-- Modal para mostrar resultado de verificación -->
<div class="modal fade" id="ollamaCheckModal" tabindex="-1" aria-labelledby="ollamaCheckModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" id="modalHeader">
                <h5 class="modal-title" id="ollamaCheckModalLabel">
                    <i class="bi bi-wifi"></i> Verificación de Conexión Ollama
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Verificando...</span>
                    </div>
                    <p class="mt-3">Verificando conexión con Ollama...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#checkOllamaBtn').click(function() {
                // Mostrar modal con spinner
                $('#ollamaCheckModal').modal('show');
                $('#modalHeader').removeClass('bg-success bg-danger bg-warning').addClass('bg-primary text-white');
                $('#modalBody').html(`
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Verificando...</span>
                        </div>
                        <p class="mt-3">Verificando conexión con Ollama...</p>
                    </div>
                `);

                // Hacer la petición AJAX
                $.ajax({
                    url: '@Url.Action("CheckOllamaConnection", "Home")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            // Conexión exitosa
                            $('#modalHeader').removeClass('bg-primary bg-danger bg-warning').addClass('bg-success text-white');
                            $('#modalBody').html(`
                                <div class="alert alert-success mb-0">
                                    <h5><i class="bi bi-check-circle-fill"></i> ${response.message}</h5>
                                    <p class="mb-0">${response.details}</p>
                                </div>
                                <div class="mt-3">
                                    <strong>Estado:</strong> <span class="badge bg-success">Online</span>
                                </div>
                            `);
                        } else {
                            // Conexión fallida
                            $('#modalHeader').removeClass('bg-primary bg-success bg-warning').addClass('bg-danger text-white');
                            
                            let suggestionsHtml = '';
                            if (response.suggestions && response.suggestions.length > 0) {
                                suggestionsHtml = '<hr><strong>Soluciones:</strong><ul class="mb-0">';
                                response.suggestions.forEach(function(suggestion) {
                                    suggestionsHtml += '<li>' + suggestion + '</li>';
                                });
                                suggestionsHtml += '</ul>';
                            }

                            $('#modalBody').html(`
                                <div class="alert alert-danger mb-0">
                                    <h5><i class="bi bi-exclamation-triangle-fill"></i> ${response.message}</h5>
                                    <p>${response.details}</p>
                                    ${suggestionsHtml}
                                </div>
                                <div class="mt-3">
                                    <strong>Estado:</strong> <span class="badge bg-danger">Offline</span>
                                </div>
                            `);
                        }

                        // Actualizar indicador en la página
                        setTimeout(function() {
                            location.reload();
                        }, 3000);
                    },
                    error: function(xhr, status, error) {
                        $('#modalHeader').removeClass('bg-primary bg-success bg-danger').addClass('bg-warning text-dark');
                        $('#modalBody').html(`
                            <div class="alert alert-warning mb-0">
                                <h5><i class="bi bi-exclamation-triangle"></i> Error de Comunicación</h5>
                                <p>No se pudo verificar el estado de Ollama.</p>
                                <p class="mb-0"><strong>Error:</strong> ${error}</p>
                            </div>
                        `);
                    }
                });
            });
        });
    </script>
}