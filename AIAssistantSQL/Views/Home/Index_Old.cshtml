@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mb-5">
    <h1 class="display-4">
        <i class="bi bi-robot"></i> AI Assistant SQL
    </h1>
    <p class="lead">Consulta tus bases de datos usando lenguaje natural</p>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card h-100 card-hover">
            <div class="card-body text-center">
                <i class="bi bi-database-fill-gear text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Estado del Sistema</h5>
                <hr />
                <div class="text-start">
                    <p>
                        <strong>Ollama:</strong>
                        @if (ViewBag.IsOllamaAvailable)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Conectado
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="bi bi-x-circle"></i> Desconectado
                            </span>
                        }
                    </p>
                    <p>
                        <strong>Esquema:</strong>
                        @if (ViewBag.IsSchemaLoaded)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Cargado
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning">
                                <i class="bi bi-exclamation-triangle"></i> No cargado
                            </span>
                        }
                    </p>
                    @if (ViewBag.IsSchemaLoaded)
                    {
                        <p class="small text-muted mb-0">@ViewBag.SchemaInfo</p>
                    }
                </div>
                <hr />
                <button type="button" class="btn btn-sm btn-outline-primary w-100" id="checkOllamaBtn">
                    <i class="bi bi-wifi"></i> Verificar Conexi�n Ollama
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 card-hover">
            <div class="card-body text-center">
                <i class="bi bi-gear-fill text-info" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Configuraci�n</h5>
                <p class="card-text">Carga el esquema de tu base de datos</p>
                <a asp-controller="Database" asp-action="Index" class="btn btn-info">
                    <i class="bi bi-database"></i> Configurar BD
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 card-hover">
            <div class="card-body text-center">
                <i class="bi bi-chat-left-text-fill text-success" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">Consultas</h5>
                <p class="card-text">Haz preguntas en lenguaje natural</p>
                <a asp-controller="Query" asp-action="Index" class="btn btn-success">
                    <i class="bi bi-chat-dots"></i> Realizar Consulta
                </a>
            </div>
        </div>
    </div>
</div>


<!-- Modal para mostrar resultado de verificaci�n -->
<div class="modal fade" id="ollamaCheckModal" tabindex="-1" aria-labelledby="ollamaCheckModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" id="modalHeader">
                <h5 class="modal-title" id="ollamaCheckModalLabel">
                    <i class="bi bi-wifi"></i> Verificaci�n de Conexi�n Ollama
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Verificando...</span>
                    </div>
                    <p class="mt-3">Verificando conexi�n con Ollama...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#checkOllamaBtn').click(function() {
                // Mostrar modal con spinner
                $('#ollamaCheckModal').modal('show');
                $('#modalHeader').removeClass('bg-success bg-danger bg-warning').addClass('bg-primary text-white');
                $('#modalBody').html(`
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Verificando...</span>
                        </div>
                        <p class="mt-3">Verificando conexi�n con Ollama...</p>
                    </div>
                `);

                // Hacer la petici�n AJAX
                $.ajax({
                    url: '@Url.Action("CheckOllamaConnection", "Home")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            // Conexi�n exitosa
                            $('#modalHeader').removeClass('bg-primary bg-danger bg-warning').addClass('bg-success text-white');
                            $('#modalBody').html(`
                                <div class="alert alert-success mb-0">
                                    <h5><i class="bi bi-check-circle-fill"></i> ${response.message}</h5>
                                    <p class="mb-0">${response.details}</p>
                                </div>
                                <div class="mt-3">
                                    <strong>Estado:</strong> <span class="badge bg-success">Online</span>
                                </div>
                            `);
                        } else {
                            // Conexi�n fallida
                            $('#modalHeader').removeClass('bg-primary bg-success bg-warning').addClass('bg-danger text-white');
                            
                            let suggestionsHtml = '';
                            if (response.suggestions && response.suggestions.length > 0) {
                                suggestionsHtml = '<hr><strong>Soluciones:</strong><ul class="mb-0">';
                                response.suggestions.forEach(function(suggestion) {
                                    suggestionsHtml += '<li>' + suggestion + '</li>';
                                });
                                suggestionsHtml += '</ul>';
                            }

                            $('#modalBody').html(`
                                <div class="alert alert-danger mb-0">
                                    <h5><i class="bi bi-exclamation-triangle-fill"></i> ${response.message}</h5>
                                    <p>${response.details}</p>
                                    ${suggestionsHtml}
                                </div>
                                <div class="mt-3">
                                    <strong>Estado:</strong> <span class="badge bg-danger">Offline</span>
                                </div>
                            `);
                        }

                        // Actualizar indicador en la p�gina
                        setTimeout(function() {
                            location.reload();
                        }, 3000);
                    },
                    error: function(xhr, status, error) {
                        $('#modalHeader').removeClass('bg-primary bg-success bg-danger').addClass('bg-warning text-dark');
                        $('#modalBody').html(`
                            <div class="alert alert-warning mb-0">
                                <h5><i class="bi bi-exclamation-triangle"></i> Error de Comunicaci�n</h5>
                                <p>No se pudo verificar el estado de Ollama.</p>
                                <p class="mb-0"><strong>Error:</strong> ${error}</p>
                            </div>
                        `);
                    }
                });
            });
        });
    </script>
}
