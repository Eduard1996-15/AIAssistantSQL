@model AIAssistantSQL.Models.DatabaseSchema
@{
    ViewData["Title"] = "DiagnÔøΩstico de Esquema";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="mb-3">
            <i class="bi bi-bug"></i> DiagnÔøΩstico de Esquema de Base de Datos
        </h1>
        <div class="alert alert-info">
            <strong>Base de Datos:</strong> @Model.DatabaseName | 
            <strong>Tipo:</strong> @Model.DatabaseType | 
            <strong>Cargado:</strong> @Model.LoadedAt.ToString("dd/MM/yyyy HH:mm:ss")
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-table"></i> Tablas Cargadas (@Model.Tables.Count)
                </h5>
            </div>
            <div class="card-body">
                <div class="accordion" id="tablesAccordion">
                    @foreach (var table in Model.Tables.OrderBy(t => t.TableName))
                    {
                        var tableId = $"table_{table.TableName.Replace(" ", "_")}";
                        
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button @(table.TableName == "Usuario" ? "" : "collapsed")" 
                                        type="button" 
                                        data-bs-toggle="collapse" 
                                        data-bs-target="#@tableId">
                                    <strong>@table.TableName</strong>
                                    <span class="badge bg-secondary ms-2">@table.Columns.Count columnas</span>
                                    @if (table.PrimaryKeys.Any())
                                    {
                                        <span class="badge bg-success ms-2">
                                            <i class="bi bi-key"></i> PK: @string.Join(", ", table.PrimaryKeys)
                                        </span>
                                    }
                                    @if (table.ForeignKeys.Any())
                                    {
                                        <span class="badge bg-info ms-2">
                                            <i class="bi bi-link-45deg"></i> @table.ForeignKeys.Count FKs
                                        </span>
                                    }
                                </button>
                            </h2>
                            <div id="@tableId" 
                                 class="accordion-collapse collapse @(table.TableName == "Usuario" ? "show" : "")" 
                                 data-bs-parent="#tablesAccordion">
                                <div class="accordion-body">
                                    <h6>Columnas:</h6>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-striped">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>Columna</th>
                                                    <th>Tipo</th>
                                                    <th>TamaÔøΩo</th>
                                                    <th>Nullable</th>
                                                    <th>Identity</th>
                                                    <th>Es PK</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var column in table.Columns)
                                                {
                                                    var isPK = table.PrimaryKeys.Contains(column.ColumnName);
                                                    
                                                    <tr class="@(isPK ? "table-success" : "")">
                                                        <td>
                                                            <strong>@column.ColumnName</strong>
                                                            @if (isPK)
                                                            {
                                                                <i class="bi bi-key text-warning"></i>
                                                            }
                                                        </td>
                                                        <td><code>@column.DataType</code></td>
                                                        <td>@(column.MaxLength.HasValue ? column.MaxLength.Value.ToString() : "-")</td>
                                                        <td>
                                                            @if (column.IsNullable)
                                                            {
                                                                <span class="badge bg-warning">NULL</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-success">NOT NULL</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (column.IsIdentity)
                                                            {
                                                                <span class="badge bg-info">IDENTITY</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (isPK)
                                                            {
                                                                <i class="bi bi-check-circle-fill text-success"></i>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                    @if (table.ForeignKeys.Any())
                                    {
                                        <h6 class="mt-3">Claves ForÔøΩneas:</h6>
                                        <ul class="list-group">
                                            @foreach (var fk in table.ForeignKeys)
                                            {
                                                <li class="list-group-item">
                                                    <i class="bi bi-arrow-right-circle"></i> 
                                                    <strong>@fk.ColumnName</strong> ? 
                                                    <code>@fk.ReferencedTable.@fk.ReferencedColumn</code>
                                                </li>
                                            }
                                        </ul>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-lightbulb"></i> InformaciÔøΩn para la IA
                </h5>
            </div>
            <div class="card-body">
                <h6>Resumen del esquema para consultas de IA:</h6>
                @{
                    var totalTables = Model.Tables.Count;
                    var totalColumns = Model.Tables.Sum(t => t.Columns.Count);
                    var tablesWithPK = Model.Tables.Count(t => t.PrimaryKeys.Any());
                    var tablesWithFK = Model.Tables.Count(t => t.ForeignKeys.Any());
                }
                
                <div class="alert alert-success">
                    <h6>üìä Estad√≠sticas del esquema:</h6>
                    <ul>
                        <li><strong>Total de tablas:</strong> @totalTables</li>
                        <li><strong>Total de columnas:</strong> @totalColumns</li>
                        <li><strong>Tablas con clave primaria:</strong> @tablesWithPK</li>
                        <li><strong>Tablas con relaciones:</strong> @tablesWithFK</li>
                    </ul>
                </div>

                @if (Model.Tables.Any())
                {
                    <div class="alert alert-info">
                        <h6>üîç Tablas principales identificadas:</h6>
                        <ul>
                            @foreach (var table in Model.Tables.Take(5))
                            {
                                var columnCount = table.Columns.Count;
                                var hasRelations = table.ForeignKeys.Any() || Model.Tables.Any(t => t.ForeignKeys.Any(fk => fk.ReferencedTable == table.TableName));
                                <li>
                                    <strong>@table.TableName</strong> 
                                    (@columnCount columnas@(hasRelations ? ", con relaciones" : ""))
                                </li>
                            }
                            @if (Model.Tables.Count > 5)
                            {
                                <li><em>... y @(Model.Tables.Count - 5) tablas m√°s</em></li>
                            }
                        </ul>
                    </div>

                    <div class="alert alert-warning">
                        <h6>üí° Consejos para consultas SQL exitosas:</h6>
                        <ul>
                            <li>Usa los nombres exactos de tablas y columnas mostrados arriba</li>
                            <li>Verifica las relaciones antes de hacer JOINs</li>
                            <li>Las claves primarias son √∫tiles para identificar registros √∫nicos</li>
                            @if (tablesWithFK > 0)
                            {
                                <li>Hay @tablesWithFK tablas con relaciones - √∫tiles para consultas complejas</li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <strong>‚ö†Ô∏è No se encontraron tablas en el esquema actual!</strong>
                        <p>Verifica que la conexi√≥n a la base de datos sea correcta y que tenga permisos de lectura.</p>
                    </div>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-download"></i> Exportar Esquema
                </h5>
            </div>
            <div class="card-body">
                <p>Descarga el esquema actual en formato JSON para anÔøΩlisis o respaldo:</p>
                <a href="@Url.Action("GetSchemaJson", "Diagnostic")" 
                   class="btn btn-info" 
                   download="schema.json"
                   target="_blank">
                    <i class="bi bi-file-earmark-code"></i> Descargar JSON
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Buscar columnas
        $(document).ready(function() {
            $('#searchColumn').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('table tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
