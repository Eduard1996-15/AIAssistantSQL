@model List<QueryHistory>
@{
    ViewData["Title"] = "Historial de Consultas";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="mb-3">
            <i class="bi bi-clock-history"></i> Historial de Consultas
        </h1>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Total de Consultas: @Model.Count</h5>
                    <form asp-controller="Query" asp-action="ClearHistory" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-trash"></i> Limpiar Historial
                        </button>
                    </form>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Fecha/Hora</th>
                                    <th>Consulta en Lenguaje Natural</th>
                                    <th>SQL Generado</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-nowrap">@item.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        <td>@item.NaturalLanguageQuery</td>
                                        <td><code>@item.GeneratedSQL</code></td>
                                        <td>
                                            @if (item.Success)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Exitosa
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Fallida
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No hay consultas en el historial.
    </div>
}

<div class="row mt-4">
    <div class="col-md-12">
        <a asp-controller="Query" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Volver a Consultas
        </a>
    </div>
</div>
