<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI Assistant SQL</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <style>
        /* Variables CSS para consistencia */
        :root {
            --primary-color: #0d6efd;
            --success-color: #198754;
            --danger-color: #dc3545;
            --warning-color: #ffc107;
            --info-color: #0dcaf0;
            --dark-color: #212529;
            --light-color: #f8f9fa;
            --border-radius: 0.5rem;
            --box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            --transition: all 0.15s ease-in-out;
        }

        /* Base styles */
        body {
            font-size: 14px;
            line-height: 1.5;
        }

        /* Navbar responsive */
        .navbar-brand {
            font-weight: bold;
            font-size: 1.2rem;
        }

        @@media (min-width: 768px) {
            .navbar-brand {
                font-size: 1.5rem;
            }
        }

        /* Status indicators */
        .status-indicator {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 5px;
        }

        @@media (min-width: 768px) {
            .status-indicator {
                width: 10px;
                height: 10px;
            }
        }

        .status-online {
            background-color: var(--success-color);
            box-shadow: 0 0 3px var(--success-color);
        }

        .status-offline {
            background-color: var(--danger-color);
            box-shadow: 0 0 3px var(--danger-color);
        }

        /* Cards responsive */
        .card-hover {
            transition: var(--transition);
            border-radius: var(--border-radius);
        }

        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        @@media (min-width: 768px) {
            .card-hover:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.2);
            }
        }

        /* Code blocks responsive */
        .code-block {
            background-color: var(--light-color);
            border: 1px solid #dee2e6;
            border-radius: var(--border-radius);
            padding: 0.75rem;
            font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', 'Droid Sans Mono', 'Source Code Pro', monospace;
            font-size: 0.8rem;
            overflow-x: auto;
            word-break: break-all;
        }

        @@media (min-width: 768px) {
            .code-block {
                padding: 1rem;
                font-size: 0.9rem;
                word-break: normal;
            }
        }

        /* Mobile optimizations */
        @@media (max-width: 767.98px) {
            .container {
                padding-left: 10px;
                padding-right: 10px;
            }

            .navbar-nav .nav-link {
                padding: 0.25rem 0.5rem;
                font-size: 0.9rem;
            }

            .navbar-nav .nav-link i {
                margin-right: 0.25rem;
            }

            .btn {
                font-size: 0.875rem;
                padding: 0.375rem 0.75rem;
            }

            .card-body {
                padding: 1rem;
            }

            .display-4 {
                font-size: 2rem;
            }

            .lead {
                font-size: 1rem;
            }

            /* Hide text in mobile nav status */
            .navbar-nav .nav-link span:not(.status-indicator) {
                display: none;
            }
        }

        /* Tablet optimizations */
        @@media (min-width: 768px) and (max-width: 991.98px) {
            .navbar-brand {
                font-size: 1.3rem;
            }
            
            .card-body {
                padding: 1.25rem;
            }
        }

        /* Touch targets for mobile */
        @@media (max-width: 767.98px) {
            .btn, .nav-link, .card-hover {
                min-height: 44px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .nav-link {
                justify-content: flex-start;
            }
        }

        /* Improved alerts for mobile */
        .alert {
            font-size: 0.9rem;
            border-radius: var(--border-radius);
        }

        @@media (max-width: 767.98px) {
            .alert {
                margin-bottom: 1rem;
                padding: 0.75rem;
            }

            .alert .btn-close {
                padding: 0.375rem;
            }
        }

        /* Footer responsive */
        .footer {
            padding: 1rem 0;
            margin-top: 2rem;
            font-size: 0.875rem;
        }

        @@media (max-width: 767.98px) {
            .footer {
                text-align: center;
                font-size: 0.8rem;
            }

            .footer .container {
                padding: 0 15px;
            }
        }

        /* Loading animations */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
        }

        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }

        /* Focus states for accessibility */
        .btn:focus,
        .form-control:focus,
        .form-select:focus {
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
    </style>
    @* Renderizar estilos adicionales de las vistas *@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-database-fill-gear"></i> AI Assistant SQL
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Database" asp-action="Index">
                                <i class="bi bi-database"></i> Configuración BD
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Query" asp-action="Index">
                                <i class="bi bi-chat-dots"></i> Consultas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Settings" asp-action="Index">
                                <i class="bi bi-gear-fill"></i> Configuración
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Diagnostic" asp-action="ViewSchema">
                                <i class="bi bi-bug"></i> Diagnóstico
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="nav-link">
                                <span class="status-indicator @(ViewBag.IsOllamaAvailable == true ? "status-online" : "status-offline")"></span>
                                Ollama
                            </span>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link">
                                <span class="status-indicator @(ViewBag.IsSchemaLoaded == true ? "status-online" : "status-offline")"></span>
                                Esquema
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Html.Raw(TempData["Success"])
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @Html.Raw(TempData["Error"])
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @Html.Raw(TempData["Warning"])
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - AI Assistant SQL - 
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>